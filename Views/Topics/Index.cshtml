@model IEnumerable<Highlights.Models.Topic>

@{
    ViewData["Title"] = "Index";
}

<header class="d-flex justify-content-between align-items-center mb-3 mt-2">
    <h1>Highlights - Topics</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">New Topic</a>
    </p>
</header>

<table class="table">
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
}
    </tbody>
</table>
