@model IEnumerable<Highlights.Models.Topic>

@{
    ViewData["Title"] = "Index";
}

<header class="d-flex justify-content-between align-items-center mb-3 mt-2">
    <h1>Highlights - Topics</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">New Topic</a>
    </p>
</header>

<ul class="text-center">
@foreach (var item in Model)
{
    <p><a class="btn btn-primary" asp-controller="Books" asp-action="Index" asp-route-id="@item.Id" asp-route-topic="@item.Name">@Html.DisplayFor(modelItem => item.Name)</a></p>
}
</ul>
