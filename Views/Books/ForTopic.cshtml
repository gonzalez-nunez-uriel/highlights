@model IEnumerable<Highlights.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex align-items-center mb-5 mt-3">
    <h1>@ViewData["Topic"]</h1>
	<div class="d-flex justify-content-between align-items-center w-100">
		<div id="managers ms-3">
    		<a class="btn btn-secondary m-2 d-block" asp-action="Index" asp-route-id="@ViewData["TopicId"]" asp-route-topic="@ViewData["Topic"]">Book Manager</a>
        	<a class="btn btn-secondary m-2" asp-controller="Tags" asp-action="Index" asp-route-id="@ViewData["TopicId"]" asp-route-topic="@ViewData["Topic"]">Tags Manager</a>
     	</div>
    	<div id="controls">
        	<div id="controls-top" class="d-flex">
                <a class="btn btn-primary m-2" asp-action="Create" asp-route-id="@ViewData["TopicId"]" asp-route-topic="@ViewData["Topic"]">Add Book</a>
                <a class="btn btn-primary m-2" asp-action="Add Book">Test 1</a>
        	</div>
        	<div id="controls-bottom" class="d-flex justify-content-between">
                <a class="btn btn-primary m-2" asp-action="Add Book">Test 2</a>
                <a class="btn btn-primary m-2" asp-action="Add Book">Test 3</a>
        	</div>
    	</div>
	</div>
</div>

<div class="text-center">
@foreach (var item in Model) {
   <p><a asp-action="HighlightsManager" class="btn btn-primary">@Html.DisplayFor(_ => item.Title)</a></p>
}
</div>
