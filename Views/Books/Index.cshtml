@model IEnumerable<Highlights.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-3 mt-3">
    <h1>@ViewData["Topic"]</h1>
    <div id="controls">
        <div id="controls-top" class="d-flex">
                <a class="btn btn-primary m-2" asp-action="Add Book">Create New</a>
                <a class="btn btn-primary m-2" asp-action="Add Book">Test 1</a>
        </div>
        <div id="controls-bottom" class="d-flex justify-content-between">
                <a class="btn btn-primary m-2" asp-action="Add Book">Test 2</a>
                <a class="btn btn-primary m-2" asp-action="Add Book">Test 3</a>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopicId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
